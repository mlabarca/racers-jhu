<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>City</th>
      <th>State</th>
      <th>Swim</th>
      <th>Units</th>
      <th>Bike</th>
      <th>Units</th>
      <th>Run</th>
      <th>Units</th>
    </tr>
  </thead>
  <tbody>
    <% @races.each do |race| %>
      <tr>
        <td><%= race.name           %></td>
        <td><%= race.date           %></td>
        <td><%= race.city           %></td>
        <td><%= race.state          %></td>
        <td><%= race.swim_distance  %></td>
        <td><%= race.swim_units     %></td>
        <td><%= race.bike_distance  %></td>
        <td><%= race.bike_units     %></td>
        <td><%= race.run_distance   %></td>
        <td><%= race.run_units      %></td>
      </tr>
    <% end %>
  </tbody>
</table>